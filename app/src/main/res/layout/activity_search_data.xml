<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_colour"
    tools:context="in.ac.iittp.solarx.SearchData">
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Fill the details below to search"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:padding="16dp"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:textSize="20dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/yellow500"
        android:padding="16dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Latitude     :"
            android:textSize="20dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/testLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type latitude here"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:background="@color/yellow500"
        android:padding="16dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="Longitude :"
            android:textSize="20dp"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/testLon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type Longitude here"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="16dp"/>
    </LinearLayout>
    <CheckBox
        android:onClick="chkbox2"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take my device's location"/>
    <Button
        android:id="@+id/btnHit"
        android:layout_margin="8dp"
        android:text="Search"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundbutton"
        android:backgroundTint="@android:color/holo_purple"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:background="@android:color/holo_green_light"
        android:id="@+id/result"
        android:padding="32dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Result :"
        android:textSize="32sp"/>
</LinearLayout>
